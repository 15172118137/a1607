<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chenfan.gift_speak.MainActivity">

    <RelativeLayout
        android:id="@+id/main_relative"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#FD6563">
        <ImageButton
            android:id="@+id/main_signin_btn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_signin"
            android:background="#00000000"/>
        <TextView
            android:id="@+id/main_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="礼物说"
            android:textColor="#ffffff"
            android:textSize="15sp" />
        <ImageButton
            android:id="@+id/main_model_btn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/main_search_btn"
            android:src="@drawable/ic_night_on"
            android:background="#00000000"/>
        <ImageButton
            android:id="@+id/main_search_btn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_search"
            android:background="#00000000"/>
    </RelativeLayout>
    <com.viewpagerindicator.TitlePageIndicator
        android:id="@+id/main_indicator"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_relative"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/main_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_indicator"/>

</RelativeLayout>
